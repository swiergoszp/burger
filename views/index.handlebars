<div class="container">

  <h1>Burgers!</h1>

  <div class="row">

    <div class="col-6">

      <h2>Burgers waiting to be devoured</h2>

      <ul id="burger-list">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li class="available-burger">
              <span class="burgers">
                {{this.id}}
                {{this.burger_name}}
              </span>
              <span id="devour-button">
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="devour-button" type="submit">Devour it!</button>
                </form>
              </span>
            </li>
          {{/unless}}
        {{/each}}
      </ul>


    </div>

    <div class="col-6">

      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="devoured-burger">
              <span class="burgers">
                {{this.id}}
                {{this.burger_name}}
              </span>
              <span id="remake-button">
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button class="reamake-button" type="submit">Have Another!</button>
                </form>
              </span>
            </li>
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>

  <div class="row">
    <div class="col-12">
      <form action="/" method="POST">
        <input type="text" id="name" name="burger_name">
        <button type="submit" class="addBurgerButton">Add The Burger</button>
      </form>
    </div>
  </div>

</div>